{
  "manifest_version": 3,
  "name": "Simple Page Saver",
  "version": "1.0.0",
  "description": "Extract web content as markdown files using AI-powered processing",
  "permissions": [
    "tabs",
    "scripting",
    "downloads",
    "storage",
    "activeTab",
    "notifications",
    "debugger"
  ],
  "host_permissions": [
    "http://localhost/*",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_idle"
    }
  ]
}
